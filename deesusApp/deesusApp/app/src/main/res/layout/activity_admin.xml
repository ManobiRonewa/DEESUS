<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".admin">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="345dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/deesus" />

    <!-- Title Text -->

    <!-- Button Layout to Organize Buttons -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Menu:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <!-- Manage Users Button -->
        <Button
            android:id="@+id/btnManageUsers"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:onClick="users"
            android:text="1: Admins controller"
            android:textColor="#FFFFFF" />

        <!-- Add Clothes Button -->
        <Button
            android:id="@+id/btnAddClothes"
            android:layout_width="222dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:onClick="add_clothe"
            android:text="2: Product adding "
            android:textColor="#FFFFFF" />

        <!-- View Clothes Button -->
        <Button
            android:id="@+id/btnViewClothes"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:onClick="viewss"
            android:text="3: ReView products in stock    "
            android:textColor="#FFFFFF" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnWebHome"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#000000"
            android:onClick="out"
            android:text="4:  Logout of admin"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</LinearLayout>
